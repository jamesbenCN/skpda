                android:layout_height="15dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="10dp"
                    android:text="起订量"
                    android:textSize="10dp" />

