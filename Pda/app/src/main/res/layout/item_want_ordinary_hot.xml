                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textColor="@color/colorAttion"
                    android:text="0"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
