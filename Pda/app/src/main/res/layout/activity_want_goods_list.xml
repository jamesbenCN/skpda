<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".parts.want.WantGoodsListActivity">
    <FrameLayout
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="要货--"
                android:textColor="@color/colorDefault"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_transtype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="配送"
                android:textColor="@color/colorDefault"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_good_list_ok"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:gravity="center">
            <TextView
                android:layout_height="20dp"
                android:layout_width="40dp"
                android:layout_marginStart="300dp"
                android:gravity="center"
                android:text="结束"
                android:textColor="@color/colorDefault"/>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp">

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tl_1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            tl:tl_bar_color="#ffffff"
            tl:tl_indicator_color="@color/colorPrimary"
            tl:tl_indicator_corner_radius="8dp"
            tl:tl_tab_padding="20dp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>