<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/want_ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorBackground"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/want_iv_right"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/new_img_loading_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/want_tv_right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="这里是产品名称"
                android:textColor="#000000"
                android:textSize="12dp" />
            <ImageView
                android:id="@+id/want_iv_right_ishot"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:src="@drawable/icon_hot" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_barcode"/>

                <TextView
                    android:id="@+id/want_tv_right_no"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="1010101010011"
                    android:textSize="10dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_no"/>

                <TextView
                    android:id="@+id/want_tv_right_id"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:text="1111111"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="包装"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/want_tv_right_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="散装"
                    android:textSize="10dp" />

                <View android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="起订量"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/want_tv_right_min"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="起订量"
                    android:textSize="10dp" />

                <View android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="规格"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/want_tv_right_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="规格"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_purprice" />

                    <TextView
                        android:id="@+id/want_tv_right_purprice"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:text="00.00"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_rprice" />

                    <TextView
                        android:id="@+id/want_tv_right_rprice"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:text="00.00"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/want_tv_had_text"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:text="已添加"
                    android:textSize="10dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/want_tv_had_add"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textColor="@color/colorAttion"
                    android:text="0"
                    android:textSize="10dp"
                    android:visibility="gone"/>
                    </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/want_iv_item_numSub"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_sub"/>

                <EditText
                    android:id="@+id/want_et_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:text=" 20"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/want_iv_item_numAdd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_add"/>

                <TextView
                    android:id="@+id/want_tv_right_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical"
                    android:text="单位"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/want_iv_item_add_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/icon_add_to_cart"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>