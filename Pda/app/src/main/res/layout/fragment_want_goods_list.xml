<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sk.pda.parts.want.WantGoodsListActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_type_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/round_rim_bg"
        android:text="点击筛选" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="当前商品类别" />

    <TextView
        android:id="@+id/want_tv_currentItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="----" />
</LinearLayout>


    <View
        android:id="@+id/drop_down_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#696969" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/want_rv_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="85%" />
    <View
        android:id="@+id/main_darkview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_bg"
        android:visibility="gone" />

</LinearLayout>